<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ItemActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/programmer_icon"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/programmer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/programmer_occupation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Occupation: "
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/programmer_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/programmer_age_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/programmer_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/programmer_salary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary: "
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/programmer_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/programmer_bio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio: "
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/programmer_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>


</LinearLayout>